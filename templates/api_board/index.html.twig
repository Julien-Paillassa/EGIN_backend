{% extends 'base.html.twig' %}

{% block title %}Board index{% endblock %}

{% block body %}
    <h1>Board index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Brand</th>
                <th>Name</th>
                <th>Size</th>
                <th>Volume</th>
                <th>Description</th>
                <th>Dimension</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for board in boards %}
            <tr>
                <td>{{ board.id }}</td>
                <td>{{ board.brand }}</td>
                <td>{{ board.name }}</td>
                <td>{{ board.size }}</td>
                <td>{{ board.volume }}</td>
                <td>{{ board.description }}</td>
                <td>{{ board.dimension }}</td>
                <td>
                    <a href="{{ path('app_api_board_show', {'id': board.id}) }}">show</a>
                    <a href="{{ path('app_api_board_edit', {'id': board.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_api_board_new') }}">Create new</a>
{% endblock %}
